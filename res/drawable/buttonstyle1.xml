<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <gradient android:angle="90.0" 
                android:endColor="#aaaaaa" 
                android:startColor="#505050" 
                android:type="linear" />

            <corners android:radius="5.0dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:angle="90.0" 
                android:endColor="#DDDDDD" 
                android:startColor="#707070" 
                android:type="linear" />

            <corners android:radius="5.0dp" />
        </shape>
     </item>
</selector>