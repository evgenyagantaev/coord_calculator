<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <gradient android:angle="90.0" 
                android:endColor="#aa2020" 
                android:startColor="#501010" 
                android:type="linear" />

            <corners android:radius="5.0dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:angle="90.0" 
                android:endColor="#ff3030" 
                android:startColor="#705050" 
                android:type="linear" />

            <corners android:radius="5.0dp" />
        </shape>
     </item>
</selector>
